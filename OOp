using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace L1
{
    public abstract class Employee
    {
        private string name;
        private int id;
        private string status;
        private string appointmentDate;
        private Department department;

        public string Name { get => name; set => name = value; }
        public int Id
        {
            get => id;
            set
            {
                if (id != null)
                {
                    id = value;
                }
            }
        }

        public string AppointmentDate
        {
            get => appointmentDate;
            set
            {
                if (appointmentDate != null)
                {
                    appointmentDate = value;
                }
            }
        }

        public string Status { get => this.status; set => this.status = value; }
        public Department Department { get => department; set => department = value; }

        public Employee(string name, int id,string status, string AppointmentDate, Department department)
        {
            this.Name = name;
            this.Id = id;
            this.AppointmentDate = AppointmentDate;
            this.status = status;
            Department = department;
        }

        public Employee(string name, int id, string status, Department department) : this(name, id,status,"", department) { }

        public Employee(string name, int id, Department department) :this(name,id,"",department){ }

        public Employee(string name,Department department) : this(name, 0, department) { }
        public Employee(Department department) : this("", department) { }

        public void printProfile()
        {
            Console.WriteLine("id" + id);
            Console.WriteLine("name" + name);
            Console.WriteLine("status" + status);
            Console.WriteLine("AppointmentDate" + AppointmentDate);
        }

        protected virtual void showEmployee()
        {
            Console.WriteLine("This is an Employee Class");
        }

        public abstract void showDepartment();
    }
}

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace L1
{
    public class ContractEmployee : Employee
    {
        private double hourlyRate;

        public double HourlyRate { get => hourlyRate; set => hourlyRate = value; }

        public ContractEmployee(Department department) : base(department) { }

        public new void DisplayContractEmployee()
        {
            Console.WriteLine("This is Contract Employee Class");
        }

        public override void showDepartment()
        {
            Console.WriteLine(base.Department);
        }

    }
}


using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace L1
{
    public class PermenantEmployee : Employee
    {
        private double bonus;

        public double Bonus { get => bonus; set => bonus = value; }

        public PermenantEmployee(Department department) : base(department) { }

        public void show()
        {
            base.displayEmployee();
            Console.WriteLine("This is a Permanant Employee Class");
        }

        
    }

}


