using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace L1
{
    public sealed class PaySlip
    {
        private int year;
        private int month;
        private Payroll payrolls;
        private Salary salary = new Salary();

        public int Year
        {
            get => year;
            set
            {
                if (year < 2000 && year > 3000)
                {
                    year = value;
                }
            }
        }
        public int Month
        {
            get => month;
            set
            {
                if (month <= 12 && month >= 1)
                {
                    month = value;
                }
            }
        }

        public Salary Salary { get => salary; set => salary = value; }

        public PaySlip(int year, int month, Salary salary)
        {
            this.year = year;
            this.month = month;
            this.Salary = salary;
        }

        public PaySlip(int year, Salary salary) : this(year, 0, salary) { }

        public PaySlip(Salary salary):this(0000,salary) { }

        public PaySlip():this(2001,11,new Salary()){ }

    }
}


