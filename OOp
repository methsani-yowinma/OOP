namespace L1
{
    public class Salary
    {
        private double basicSalary;
        private double allowances;
        private double netSalary;
        private PaySlip paySlip = new PaySlip();

        /*public double getBasicSalary() 
        { 
            return basicSalary; 
        }
        public void setBasicSalary(double basicSalary)
        {   
            this.basicSalary = basicSalary; 
        } */
        
        public double BasicSalary
        {
            get => basicSalary;
            set
            {
                if (value >= 0.0)
                {
                    basicSalary = value;
                }
                else
                {
                    basicSalary = 1000;
                }
            }
        }
        public double Allowances
        {
            get => allowances;
            set
            {
                if (value > 0.0)
                {
                    allowances = value;
                }
            }
        }

        public PaySlip PaySlip { get => paySlip; set => paySlip = value; }
        public double NetSalary { get => netSalary; set => netSalary = value; }


        /*public double getallowances()
        {
            return allowances;
        }

        public void setallowances(double allowances)
        {
            this.allowances = allowances;
        }
        */

        //public double getBasic => basicSalary;
        //public void setBasic(double basic) => basicSalary = basic;

        public Salary(double basicSalary, double allowances)
        {
            BasicSalary = basicSalary;
            Allowances = allowances;
            NetSalary = 0.0;
        }

        public Salary(double basicSalary, Salary salary) : this(basicSalary, 0.0)
        {
        }

       /*public Salary(Salary salary) : this(0.0,salary)
        {
            //basicSalary = 0.0;
            //allowances = 0.0;
            //netSalary= 0.0;
        }*/

        public Salary() : this(0.0) { }

        public double CalculateNetSalary()
        {
            NetSalary = BasicSalary + Allowances;
            Console.WriteLine(NetSalary);
            return NetSalary;
        }

        
    }
    
}


